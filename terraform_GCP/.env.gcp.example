# ============================================================================
# GCP Environment Variables Template
# Copy this file to .env.gcp and fill in your values
# ============================================================================

# GCP Project Configuration
GCP_PROJECT_ID=your-project-id-here
GCP_REGION=us-central1
GCP_ZONE=us-central1-a
ENVIRONMENT=dev

# Vertex AI Configuration
VERTEX_PROJECT=your-project-id-here
VERTEX_LOCATION=us-central1
VERTEX_MODEL_ID=gemini-1.5-pro
VERTEX_EMBEDDINGS_MODEL=textembedding-gecko@003

# Database Configuration (set after database module deployment)
DB_INSTANCE_CONNECTION_NAME=project:region:instance
DB_NAME=alex
DB_USER=alex_user
DB_PASSWORD=<from-secret-manager>

# Service Account Email (set after foundation module deployment)
CLOUDRUN_SERVICE_ACCOUNT=alex-cloudrun-sa@your-project-id.iam.gserviceaccount.com

# API Configuration
API_KEY=<your-api-key-here>

# Clerk Authentication (same as AWS)
CLERK_SECRET_KEY=<your-clerk-secret-key>
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=<your-clerk-publishable-key>

# Frontend URLs
NEXT_PUBLIC_API_URL_GCP=https://your-gcp-api-domain.com
NEXT_PUBLIC_FRONTEND_URL_GCP=https://your-gcp-frontend-domain.com

# Monitoring (optional)
ENABLE_CLOUD_TRACE=true
ENABLE_CLOUD_PROFILER=false

# Development
LOCAL_DEVELOPMENT=false
